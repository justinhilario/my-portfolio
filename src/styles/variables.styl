html
  --base-font-size 15px

body
  --bg-color #fdfbf4
  --bg-content-color #fdfbf4
  --title-color #1b2c13
  --body-color #1b1d2a
  --primary-color #F1B631
  --secondary-color #f18731
  --disabled-color #888
  --radius 6px
  --space 3.5rem
  --header-height 80px
  --content-width 800px
  --transition-fast 0.2s
  --transition-normal 0.4s
  --transition-slow 0.6s
  --bg-code rgba(0, 0, 0, 0.3)
  --border-color rgba(27,44,19,.6)

@media screen and (max-width 650px)
  html
    --base-font-size 15px

  body
    --space 1.5rem
    --header-height 60px
